@model CooperVision.Models.CommentViewModel


@using (Html.BeginForm("PostComment", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h4 style="margin-left:15px">
                Add Comment
            </h4>
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.CommentDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CommentDescription, "", new { @class = "text-danger" })
                
            

                @Html.HiddenFor(x => x.BlogId)
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Post Comment" class="btn btn-default m-l-17" />
                @Html.ActionLink("Cancel", "Cancel", "Home", new { @class ="m-l-100"})
            </div>
            
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
